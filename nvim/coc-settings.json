{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "h",
                "c",
                "hpp",
                "cpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "client": {
                    "snippetSupport": true
                }
            }
        }
    },
}
